<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org// DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper と xml のマッピング -->
<mapper namespace="com.example.repository.UserMapper">
    <insert id="insertOne">
        insert into m_user(
             user_id
            ,password
            ,user_name
            ,birthday
            ,age
            ,gender
            ,department_id
            ,role
        ) values (
             #{userId}
            ,#{password}
            ,#{userName}
            ,#{birthday}
            ,#{age}
            ,#{gender}
            ,#{departmentId}
            ,#{role}
        );
    </insert>

    <!-- ユーザー複数件取得 -->
    <select id="findMany" resultType="MUser">
        select * from M_USER
    </select>

</mapper>